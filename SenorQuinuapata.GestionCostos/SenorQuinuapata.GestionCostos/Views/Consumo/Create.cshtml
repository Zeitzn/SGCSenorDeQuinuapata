@model SenorQuinuapata.GestionCostos.Entities.Request.ConsumoRequest
@{
    ViewBag.Title = "Registrar consumo";
}

<div class="col-md-6">
    <div class="small well">
        <h4 style="color:darkgreen">Consumo de la Producción</h4>
        @using (Html.BeginForm("Create", "Consumo", FormMethod.Post, new { id = "consumo-form" }))

        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label>Elemento de costo:</label>
                <select class="form-control" name="tipo">
                    <option value="md">MD</option>
                    <option value="mi">MI</option>
                </select>
            </div>

            <div class="form-group">
                <label>Fecha:</label>
                <input type="date" class="form-control" name="fecha" value="" />
            </div>

            <div class="form-group">
                <label>Producto:</label>
                <div class="col-md-12">
                    <div class="col-md-10">
                        <input type="text" class="form-control pull-left" name="nombre_producto" value="" id="id_nombre_producto" disabled/>
                        <input type="hidden" name="id_producto" value="" id="id_id_producto" />
                    </div>

                    <div class="col-md-2">
                        <!-- Trigger the modal with a button -->
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalProductos">Seleccionar</button>
                    </div>
                </div>

            </div>

            <div class="form-group">
                <label>Código del producto:</label>
                <input type="text" class="form-control" name="codigo_producto" value="" id="id_codigo_producto" disabled/>
            </div>

            <div class="form-group">
                <label>Cantidad:</label>
                <input type="number" class="form-control" name="cantidad" value="" id="id_cantidad" />
            </div>

            <div class="form-group">
                <label>Costo Unitario:</label>
                <input type="number" class="form-control" name="costo_unitario" value="" id="id_cu" />
            </div>

            <div class="form-group">
                <label>Costo Total:</label>
                <input type="text" class="form-control" name="" value="" id="id_ct" disabled/>
                <input type="hidden" class="form-control" name="total" value="" id="id_costo_total" />
            </div>

            <div class="form-group">
                <label>Destino:</label>
                <select class="form-control" name="id_departamento">
                    <option value="1">Lactancia</option>
                    <option value="2">Recría</option>
                    <option value="3">Engorde</option>
                    <option value="4">Descarte</option>
                    <option value="7">Reproductor (Activo biológico)</option>
                </select>
            </div>            

            <div class="form-group">

                <input type="submit" value="Registrar" class="btn btn-primary" />
            </div>


        }
    </div>

</div>





<!-- Modal -->
<div id="modalProductos" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Productos</h4>
            </div>
            <div class="modal-body">
                <table class="table table-bordered small" id="table">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                NOMBRE
                            </th>
                            <th>
                                DESCRIPCIÓN
                            </th>
                            <th class="text-center">SELECCIONAR</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                NOMBRE
                            </th>
                            <th>
                                DESCRIPCIÓN
                            </th>
                            <th class="text-center">SELECCIONAR</th>
                        </tr>
                    </tfoot>
                    @{
                        int i = 1;
                    }
                    @foreach (var item in ViewBag.ListProductos)
                    {
                        <tr>
                            <td>
                                @i
                            </td>
                            <td>
                                @item.codigo
                            </td>
                            <td>
                                @item.nombre
                            </td>
                            <td class="text-center">
                                <a onclick="cargarProducto(@item.id,'@item.nombre','@item.codigo')" class="btn btn-info btn-xs glyphicon glyphicon-link"></a>
                            </td>
                        </tr>
                        i++;
                    }

                </table>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
            </div>
        </div>

    </div>
</div>

@section scripts{

    <script>
        function cargarProducto(id, nombre, codigo) {
            $("#id_codigo_producto").val(codigo);
            $("#id_id_producto").val(id);
            $("#id_nombre_producto").val(nombre);

            //$("#producto").val(nombre);
            $("#modalProductos").modal('hide');
        }

        $("#id_cu").keyup(function () {

            var cu = $("#id_cu").val();
            var cant = $("#id_cantidad").val();

            $("#id_ct").val(cu * cant);
            $("#id_costo_total").val(cu * cant);
        })

    </script>


}


