@model SenorQuinuapata.GestionCostos.DataAccess.DataBase.Cargo

@{
    ViewBag.Title = "Editar Cargo";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Editar Cargo</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.id)

    <div class="form-group">
        <label>Descripción:</label>
            @Html.EditorFor(model => model.descripcion, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.descripcion, "", new { @class = "text-danger" })
      
    </div>

    <div class="form-group">
            <label>Sueldo:</label>
            @Html.EditorFor(model => model.sueldo, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.sueldo, "", new { @class = "text-danger" })
       
    </div>

    <div class="form-group">
        <label>Tipo:</label>
        <select name="tipo" required class="form-control">
            <option value="">-----Seleccionar-----</option>
            <option value="MOD">Mano de Obra Directa</option>
            <option value="MOI">Mano de Obra Indirecta</option>
        </select>
        @Html.ValidationMessageFor(model => model.tipo, "", new { @class = "text-danger" })

    </div>

    <div class="form-group">

            <input type="submit" value="Guardar" class="btn btn-primary" />

    </div>
</div>
}

<div>
    @Html.ActionLink("Volver a la lista", "Index")
</div>
