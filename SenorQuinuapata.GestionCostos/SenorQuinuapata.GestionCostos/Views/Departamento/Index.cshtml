@model SenorQuinuapata.GestionCostos.Entities.Request.MovimientoDepartamentoRequest
@{
    ViewBag.Title = "Operaciones";
}

<div class="col-md-6">
    <div class="small well">
        <h4 style="color:darkgreen">Ingresos</h4>

        @using (Html.BeginForm("Register", "Departamento", FormMethod.Post, new { id = "ingreso-form" }))

        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label>Movimiento</label>
                <select class="form-control" name="movimiento">
                    <option value="ingreso">Ingreso</option>
                    <option value="salida">Salida</option>
                </select>
            </div>
            @*<div class="form-group">
                    <label>Fecha</label>
                    <input type="date" name="name" value="" class="form-control" />
                </div>*@
            <div class="form-group">
                <label>Origen</label>
                <select class="form-control" name="origen">
                    <option value="Nace">Nace</option>
                    <option value="1">Lactancia</option>
                    <option value="2">Recría</option>
                    <option value="3">Engorde</option>
                    <option value="4">Descarte</option>
                </select>
            </div>
            <div class="form-group">
                <label>Código de Origen</label>
                <input type="text" name="codigo_origen" value="" class="form-control" />
            </div>
            @*<div class="form-group">
                    <label>Género</label>
                    <select class="form-control" name="genero">
                        <option value="Gazapo">Gazapo</option>
                        <option value="Hembra">Hembra</option>
                        <option value="Macho">Macho</option>
                    </select>
                </div>*@
            <div class="form-group">
                <label>Destino</label>
                <select class="form-control" name="id_departamento">
                    <option value="1">Lactancia</option>
                    <option value="2">Recría</option>
                    <option value="3">Engorde</option>
                    <option value="4">Descarte</option>
                    <option value="5">Mortalidad</option>
                    <option value="6">Venta</option>
                    <option value="7">Reproductor (Activo biológico)</option>
                </select>
            </div>
            <div class="form-group">
                <label>Código de Destino</label>
                <input type="text" name="codigo_destino" value="" class="form-control" />
            </div>
            <div class="form-group">
                <label>Género</label>
                <select class="form-control" name="genero">
                    <option value="Gazapo">Gazapo</option>
                    <option value="Hembra">Hembra</option>
                    <option value="Macho">Macho</option>
                </select>
            </div>
            <div class="form-group">
                <label>Cantidad</label>
                @*<input type="number" name="" value="" class="form-control" />*@
                @Html.EditorFor(model => model.ingreso, new { htmlAttributes = new { @class = "form-control", required = "true" } })
                @Html.ValidationMessageFor(model => model.ingreso, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">

                <input type="submit" name="name" value="Registrar" class="btn btn-primary" />
            </div>
        }
    </div>

</div>

<div class="col-md-6">
    <div class="small well">
        <h4 style="color:darkgreen">Consumo de la Producción</h4>
        @using (Html.BeginForm("Create", "Consumo", FormMethod.Post, new { id = "consumo-form" }))

        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label>Elemento de costo:</label>
                <select class="form-control">
                    <option value="1">MD</option>
                    <option value="2">MI</option>
                </select>
            </div>

            <div class="form-group">
                <label>Fecha:</label>
                <input type="date" class="form-control" name="fecha" value="" />
            </div>

            <div class="form-group">
                <label>Producto:</label>
                <div class="col-md-12">
                    <div class="col-md-10">
                        <input type="text" class="form-control pull-left" name="nombre_producto" value="" id="id_nombre_producto" />
                        <input type="hidden" name="id_producto" value="" id="id_id_producto" />
                    </div>

                    <div class="col-md-2">
                        <!-- Trigger the modal with a button -->
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalProductos">Seleccionar</button>
                    </div>
                </div>

            </div>

            <div class="form-group">
                <label>Código del producto:</label>
                <input type="text" class="form-control" name="codigo_producto" value="" id="id_codigo_producto" />
            </div>

            <div class="form-group">
                <label>Cantidad:</label>
                <input type="number" class="form-control" name="cantidad" value="" id="id_codigo_producto" />
            </div>

            <div class="form-group">
                <label>Costo Unitario:</label>
                <input type="number" class="form-control" name="costo_unitario" value="" id="id_cu" />
            </div>

            <div class="form-group">
                <label>Costo Total:</label>
                <input type="text" class="form-control" name="costo_total" value="" id="id_ct" />
            </div>

            <div class="form-group">
                <label>Destino:</label>
                <select class="form-control">
                    <option value="1">Lactancia</option>
                    <option value="2">Recría</option>
                    <option value="3">Engorde</option>
                    <option value="4">Descarte</option>
                    <option value="7">Reproductor (Activo biológico)</option>
                </select>
            </div>

            <div class="form-group">
                <label>Código de destino:</label>
                <input type="text" class="form-control" name="codigo_destino" value="" id="id_codigo_destino" />
                <input type="hidden" name="id_departamento" value="" id="id_id_departamento" />
            </div>

            <div class="form-group">

                <input type="submit" value="Registrar" />
            </div>


        }
    </div>

</div>


@* NO SE USA *@


<!-- Modal -->
<div id="modalProductos" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Productos</h4>
            </div>
            <div class="modal-body">
                <table class="table table-bordered small" id="table">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                NOMBRE
                            </th>
                            <th>
                                DESCRIPCIÓN
                            </th>
                            <th class="text-center">SELECCIONAR</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                NOMBRE
                            </th>
                            <th>
                                DESCRIPCIÓN
                            </th>
                            <th class="text-center">SELECCIONAR</th>
                        </tr>
                    </tfoot>
                    @{
                        int i = 1;
                    }
                    @foreach (var item in ViewBag.ListProductos)
                    {
                        <tr>
                            <td>
                                @i
                            </td>
                            <td>
                                @item.codigo
                            </td>
                            <td>
                                @item.nombre
                            </td>
                            <td class="text-center">
                                <a onclick="cargarProducto(@item.id,'@item.nombre','@item.codigo')" class="btn btn-info btn-xs glyphicon glyphicon-link"></a>
                            </td>
                        </tr>
                        i++;
                    }

                </table>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
            </div>
        </div>

    </div>
</div>

@section scripts{

    <script>
        function cargarProducto(id, nombre,codigo) {
            $("#id_codigo_producto").val(codigo);
            $("#id_id_producto").val(id);
            $("#id_nombre_producto").val(nombre);

            //$("#producto").val(nombre);
            $("#modalProductos").modal('hide');
        }

    </script>


}
